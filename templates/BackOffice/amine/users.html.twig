        }
        .chart-wrapper {
            position: relative;
            width: 100%;
            height: 220px;
            overflow: hidden;
        }
        .chart-wrapper canvas {
            height: 100% !important;
            width: 100% !important;
        }
        .chart-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 1.5rem;
            font-weight: bold;
        }
        .equal-height-row {
            display: flex;
            flex-wrap: wrap;
        }
        .equal-height-row > [class*='col-'] {
            display: flex;
        }
    </style>

{% endblock %}

