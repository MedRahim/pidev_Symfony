    <script>
document.addEventListener('DOMContentLoaded', function() {
    // Fonctionnalit√© de recherche (restaur√©e comme dans l'ancien code)
    const searchInput = document.getElementById('searchInput');
    const tableBody = document.querySelector('tbody');
    
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = tableBody.querySelectorAll('tr');
        
        rows.forEach(row => {
            // Ignore empty rows (like 'aucun article trouv√©')
            if (!row.querySelector('td')) return;
            const title = row.querySelector('td:nth-child(1) .fw-semibold')?.textContent.toLowerCase() || '';
            const category = row.querySelector('td:nth-child(2)')?.textContent.toLowerCase() || '';
            const content = row.querySelector('td:nth-child(1) small')?.textContent.toLowerCase() || '';
            
            if (title.includes(searchTerm) || 
                category.includes(searchTerm) || 
                content.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Fonctionnalit√© de suppression (inchang√©e)
    let deleteBlogId = null;
    const deleteConfirmationModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
    const blogTitleElement = document.getElementById('blogTitle');

    document.querySelectorAll('.delete-blog').forEach(button => {
        button.addEventListener('click', function() {
            deleteBlogId = this.getAttribute('data-blog-id');
            const blogTitle = this.closest('tr').querySelector('.fw-semibold').textContent;
            blogTitleElement.textContent = blogTitle;
            deleteConfirmationModal.show();
        });
    });

    document.getElementById('confirmDelete').addEventListener('click', function() {
        if (deleteBlogId) {
            const row = document.querySelector(`[data-blog-id="${deleteBlogId}"]`).closest('tr');
            
            fetch(`/blog/${deleteBlogId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: new URLSearchParams({
                    '_token': '{{ csrf_token('delete') }}'
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    row.remove();
                    deleteConfirmationModal.hide();
                    // Afficher un toast de succ√®s
                    const toast = document.createElement('div');
                    toast.className = 'bs-toast toast toast-placement-ex m-2 fade bg-success top-0 end-0 show';
                    toast.setAttribute('role', 'alert');
                    toast.setAttribute('aria-live', 'assertive');
                    toast.setAttribute('aria-atomic', 'true');
                    toast.innerHTML = `
                        <div class="toast-header">
                            <i class="bx bx-bell me-2"></i>
                            <div class="me-auto fw-semibold">Succ√®s</div>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Fermer"></button>
                        </div>
                        <div class="toast-body">Article supprim√© avec succ√®s</div>
                    `;
                    document.body.appendChild(toast);
                    setTimeout(() => toast.remove(), 3000);
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Une erreur est survenue lors de la suppression de l\'article');
            });
        }
        deleteBlogId = null;
    });
});
</script>
    
