<div>
  <h5>Order ID: #{{ order.id }}</h5>
  <p><strong>Date:</strong> {{ order.date|date('Y-m-d H:i') }}</p>
  <p><strong>Status:</strong> {{ order.status|capitalize }}</p>
  <p><strong>Created At:</strong> {{ order.createdAt|date('Y-m-d H:i') }}</p>
  <h6>Order Items:</h6>
  <ul>
    {% for item in order.orderItems %}
      <li>
        <strong>Product:</strong> {{ item.product.name }},
        <strong>Quantity:</strong> {{ item.quantity }},
        <strong>Unit Price:</strong> {{ item.product.price }} DT,
        <strong>Total Price:</strong> {{ item.priceTotal }} DT
      </li>
    {% else %}
      <li>No items in this order.</li>
    {% endfor %}
  </ul>
  <div class="mt-3">
    <h6>Order Summary:</h6>
    <p><strong>Total Items:</strong> {{ order.orderItems|length }}</p>
    <p><strong>Grand Total:</strong> {{ order.orderItems|reduce((sum, item) => sum + item.priceTotal, 0) }} DT</p>
  </div>
</div>
