                    <input type="text" id="searchInput" class="form-control w-100 w-md-50" placeholder="üîé Rechercher un produit...">
                    <a href="{{ path('api_products_low_stock') }}" class="btn btn-outline-warning rounded-pill px-4">
                      <i class="bx bx-error"></i> Voir les stocks faibles
                    </a>
                    <a href="{{ path('api_invoices_stock') }}" class="btn btn-outline-info rounded-pill px-4">
                      <i class="bx bx-file"></i> G√©n√©rer facture stock
                    </a>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle bg-white rounded-3 overflow-hidden">
                      <thead class="table-primary text-center align-middle">
                        <tr>
                          <th>üÜî Produit</th>
                          <th>üí∞ Prix</th>
                          <th>üì¶ Stock</th>
                          <th>‚öôÔ∏è Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for product in pagination %}
                          <tr>
                            <td>
                              <div class="d-flex align-items-center">
                                {% if product.imagePath %}
                                  <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="rounded-circle" width="46" height="46">
                                {% endif %}
                                <div class="ms-3">
                                  <p class="fw-bold mb-1">{{ product.name }}</p>
                                  <p class="text-muted mb-0">{{ product.reference }}</p>
                                </div>
                              </div>
                            </td>
                            <td>{{ product.price }} TND</td>
                            <td>
                              <span class="badge {% if product.stock < product.stockLimit %}bg-danger{% else %}bg-success{% endif %}">
                                {{ product.stock }}
                              </span>
                            </td>
                            <td>
                              <button type="button" class="btn btn-primary btn-sm rounded-pill mb-1" data-bs-toggle="modal" data-bs-target="#editProductModal" data-edit-url="{{ path('app_product_edit_modal', {'id': product.id}) }}">
                                <i class="bx bx-edit"></i> Modifier
                              </button>
                              <button type="button" class="btn btn-danger btn-sm rounded-pill mb-1" data-bs-toggle="modal" data-bs-target="#deleteModal" data-delete-url="{{ path('app_product_delete', {'id': product.id}) }}" data-csrf-token="{{ csrf_token('delete' ~ product.id) }}">
                                <i class="bx bx-trash"></i> Supprimer
