{% extends 'BackOffice/base.html.twig' %}

{% block title %}Modifier réservation #{{ reservation.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-error {
            color: #dc3545;
            font-size: 0.875em;
        }
        .is-invalid {
            border-color: #dc3545 !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Admin / Réservations /</span> Modifier #{{ reservation.id }}
    </h4>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Modifier la réservation</h5>
                    <a href="{{ path('app_admin_reservations_index') }}" class="btn btn-sm btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.seatNumber, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.seatNumber, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.seatNumber) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.seatType, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.seatType, {'attr': {'class': 'form-select'}}) }}
                            <div class="form-error">
                                {{ form_errors(form.seatType) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.paymentStatus, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.paymentStatus, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.reservationTime, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.reservationTime, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-save me-1"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Informations sur la réservation</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ reservation.id }}</p>
                    <p><strong>Utilisateur:</strong> 
                        {% if reservation.user %}
                            {{ reservation.user.email }}
                        {% else %}
                            <span class="text-muted">Utilisateur inconnu</span>
                        {% endif %}
                    </p>
                    <p><strong>Trajet:</strong> 
                        {% if reservation.trip %}
                            {{ reservation.trip.departure }} → {{ reservation.trip.destination }}
                        {% else %}
                            <span class="text-muted">Trajet supprimé</span>
                        {% endif %}
                    </p>
                    <p><strong>Créé le:</strong> {{ reservation.reservationTime|date('d/m/Y H:i') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}