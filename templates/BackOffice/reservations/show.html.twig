{% extends 'BackOffice/base.html.twig' %}

{% block title %}Détails réservation #{{ reservation.id }}{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Admin / Réservations /</span> Détails #{{ reservation.id }}
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Détails de la réservation</h5>
                    <div class="d-flex">
                        <a href="{{ path('app_admin_reservations_edit', {'id': reservation.id}) }}" 
                           class="btn btn-warning me-2">
                            <i class="bx bx-edit me-1"></i> Modifier
                        </a>
                        <a href="{{ path('app_admin_reservations_index') }}" class="btn btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Retour
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>{{ reservation.id }}</td>
                                </tr>
                                <tr>
                                    <th>Utilisateur</th>
                                    <td>
                                        {% if reservation.user %}
                                            {{ reservation.user.email }}
                                        {% else %}
                                            <span class="text-muted">Utilisateur inconnu</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Trajet</th>
                                    <td>
                                        {% if reservation.trip %}
                                            {{ reservation.trip.departure }} → {{ reservation.trip.destination }}
                                        {% else %}
                                            <span class="text-muted">Trajet supprimé</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Date réservation</th>
                                    <td>{{ reservation.reservationTime|date('d/m/Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre de sièges</th>
                                    <td>{{ reservation.seatNumber }}</td>
                                </tr>
                                <tr>
                                    <th>Type de siège</th>
                                    <td>
                                        <span class="badge bg-label-{{ reservation.seatType == 'Premium' ? 'warning' : 'primary' }}">
                                            {{ reservation.seatType }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Statut</th>
                                    <td>
                                        <span class="badge bg-{{ reservation.status == 'Confirmed' ? 'success' : (reservation.status == 'Cancelled' ? 'danger' : 'warning') }}">
                                            {{ reservation.status }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Statut paiement</th>
                                    <td>
                                        <span class="badge bg-{{ reservation.paymentStatus == 'Paid' ? 'success' : (reservation.paymentStatus == 'Cancelled' ? 'danger' : (reservation.paymentStatus == 'Refunded' ? 'info' : 'warning')) }}">
                                            {{ reservation.paymentStatus }}
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}