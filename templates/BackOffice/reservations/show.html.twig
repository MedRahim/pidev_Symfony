{% extends 'BackOffice/base.html.twig' %}

{% block title %}Détails réservation #{{ reservation.id }}{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Admin / Réservations /</span> Détails #{{ reservation.id }}
    </h4>

    {# Messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'info' : 'danger')) }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="btn-group mb-3" role="group">
        <a href="{{ path('app_admin_reservations_index') }}" class="btn btn-secondary">
            <i class="bx bx-arrow-back"></i> Retour
        </a>
        <a href="{{ path('app_admin_reservations_edit', {id: reservation.id}) }}" class="btn btn-primary">
            <i class="bx bx-edit"></i> Modifier
        </a>

        <form method="post" action="{{ path('app_admin_reservations_cancel', {id: reservation.id}) }}"
              style="display:inline" 
              onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
            <button class="btn btn-danger">
                <i class="bx bx-x"></i> Annuler
            </button>
        </form>

        {% if reservation.status != 'Confirmed' %}
            <form method="post" action="{{ path('app_admin_reservations_confirm', {id: reservation.id}) }}" style="display:inline">
                <input type="hidden" name="_token" value="{{ csrf_token('confirm' ~ reservation.id) }}">
                <button class="btn btn-success">
                    <i class="bx bx-check"></i> Confirmer
                </button>
            </form>
        {% endif %}
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bx bx-info-circle"></i> Détails de la réservation</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th class="w-25"><i class="bx bx-hash"></i> ID</th>
                                    <td>{{ reservation.id }}</td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-user"></i> Utilisateur</th>
                                    <td>
                                        {{ reservation.user ? reservation.user.email : 'Utilisateur inconnu' }}
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-map"></i> Trajet</th>
                                    <td>
                                        {% if reservation.trip %}
                                            <strong>{{ reservation.trip.departure }}</strong> → <strong>{{ reservation.trip.destination }}</strong>
                                        {% else %}
                                            <span class="text-muted">Trajet supprimé</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-calendar"></i> Date réservation</th>
                                    <td>{{ reservation.reservationTime|date('d/m/Y à H:i') }}</td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-chair"></i> Nombre de sièges</th>
                                    <td>{{ reservation.seatNumber }}</td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-category"></i> Type de siège</th>
                                    <td>
                                        <span class="badge bg-label-{{ reservation.seatType == 'Premium' ? 'warning' : 'primary' }}">
                                            {{ reservation.seatType }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-check-circle"></i> Statut</th>
                                    <td>
                                        <span class="badge bg-{{ reservation.status == 'Confirmed' ? 'success' : (reservation.status == 'Cancelled' ? 'danger' : 'warning') }}">
                                            {{ reservation.status }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="bx bx-credit-card"></i> Statut paiement</th>
                                    <td>
                                        <span class="badge bg-{{ reservation.paymentStatus == 'Paid' ? 'success' : (reservation.paymentStatus == 'Cancelled' ? 'danger' : (reservation.paymentStatus == 'Refunded' ? 'info' : 'warning')) }}">
                                            {{ reservation.paymentStatus }}
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
