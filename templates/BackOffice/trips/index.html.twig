{% extends 'base.html.twig' %}

{% block title %}Gestion des trajets{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Admin /</span> Gestion des trajets
    </h4>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des trajets</h5>
            <a href="#" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i> Ajouter un trajet
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Départ</th>
                            <th>Destination</th>
                            <th>Date/Heure</th>
                            <th>Prix</th>
                            <th>Places</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for trip in trips %}
                        <tr>
                            <td><strong>{{ trip.id }}</strong></td>
                            <td>{{ trip.departure }}</td>
                            <td>{{ trip.destination }}</td>
                            <td>{{ trip.departureTime|date('d/m/Y H:i') }}</td>
                            <td>{{ trip.price }} €</td>
                            <td>
                                <span class="badge bg-label-primary">{{ trip.capacity }}</span>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <a href="{{ path('app_admin_trips_show', {'id': trip.id}) }}" 
                                       class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bx bx-show me-1"></i> Voir
                                    </a>
                                    <a href="{{ path('app_admin_trips_edit', {'id': trip.id}) }}" 
                                       class="btn btn-sm btn-outline-secondary">
                                        <i class="bx bx-edit me-1"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucun trajet trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-4">
                {{ knp_pagination_render(trips, null, {}, {
                    'align': 'center',
                    'size': 'large',
                    'style': 'rounded',
                }) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}