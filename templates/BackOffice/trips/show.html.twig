{% extends 'BackOffice/base.html.twig' %}

{% block title %}Détails trajet #{{ trip.id }}{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Admin / Trajets /</span> Détails #{{ trip.id }}
    </h4>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Détails du trajet</h5>
                    <div class="d-flex">
                        <a href="{{ path('app_admin_trips_edit', {'id': trip.id}) }}" class="btn btn-sm btn-primary me-2">
                            <i class="bx bx-edit me-1"></i> Modifier
                        </a>
                        <a href="{{ path('app_admin_trips_index') }}" class="btn btn-sm btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Retour
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>{{ trip.id }}</td>
                                </tr>
                                <tr>
                                    <th>Départ</th>
                                    <td>{{ trip.departure }}</td>
                                </tr>
                                <tr>
                                    <th>Destination</th>
                                    <td>{{ trip.destination }}</td>
                                </tr>
                                <tr>
                                    <th>Date/Heure de départ</th>
                                    <td>{{ trip.departureTime|date('d/m/Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Date/Heure d'arrivée</th>
                                    <td>{{ trip.arrivalTime|date('d/m/Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Prix</th>
                                    <td>{{ trip.price }} €</td>
                                </tr>
                                <tr>
                                    <th>Places disponibles</th>
                                    <td><span class="badge bg-label-primary">{{ trip.capacity }}</span></td>
                                </tr>
                                <tr>
                                    <th>Transport</th>
                                    <td>{{ trip.transportName ?? 'Non spécifié' }}</td>
                                </tr>
                                <tr>
                                    <th>Distance</th>
                                    <td>{{ trip.distance }} km</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Statistiques</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">Date de création : {{ trip.createdAt ? trip.createdAt|date('d/m/Y') : 'N/A' }}</p>
                    <p>Dernière modification : {{ trip.updatedAt ? trip.updatedAt|date('d/m/Y H:i') : 'N/A' }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}