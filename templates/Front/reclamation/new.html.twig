{# new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réclamation{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
<script>
function previewPhoto(input) {
    const preview = document.getElementById('photoPreview');
    const file = input.files[0];
    const uploadArea = input.previousElementSibling;
    
    if (file) {
        // Check if file is an image
        if (file.type.match('image.*')) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
                
                // Hide upload area text when image is selected
                uploadArea.querySelector('p').style.display = 'none';
                uploadArea.querySelector('small').style.display = 'none';
            }
            reader.readAsDataURL(file);
        } else {
            // For non-image files, show file name
            uploadArea.innerHTML = `<i class="fas fa-file-alt" style="font-size: 2rem; color: #4e73df; margin-bottom: 1rem;"></i>
                                   <p class="mb-0">${file.name}</p>`;
            preview.style.display = 'none';
        }
    } else {
        // Reset to default if no file
        uploadArea.innerHTML = `<i class="fas fa-cloud-upload-alt" style="font-size: 2rem; color: #4e73df; margin-bottom: 1rem;"></i>
                               <p class="mb-0">Glissez-déposez ou cliquez pour télécharger</p>
                               <small class="text-muted">Formats acceptés: JPG, PNG, PDF (max 5MB)</small>`;
        preview.style.display = 'none';
    }
}

// Trigger change event if there's already a file (when editing)
document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('{{ form.photo.vars.id }}');
    if (fileInput.files.length > 0) {
        previewPhoto(fileInput);
    }
});
</script>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card" style="border: none; border-radius: 15px; box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);">
                <div style="background: linear-gradient(135deg,rgb(255, 255, 255) 0%,rgb(200, 207, 238) 100%); color: white; border-radius: 15px 15px 0 0; padding: 1.5rem;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Réclamation
                        </h4>
                        <a href="{{ path('app_reclamation_index') }}" class="btn btn-light">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>
                <div style="padding: 2rem;">
                    {{ form_start(form) }}
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div style="margin-bottom: 1rem;">
                                    <label style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; margin-bottom: 0.5rem; display: block;">Client ID</label>
                                    {{ form_widget(form.clientId, {
                                        'attr': {
                                            'class': 'form-control',
                                            'style': 'background-color: #f8f9fc; border: none; border-left: 3px solid #4e73df; border-radius: 6px; padding: 0.75rem; font-size: 1rem; color: #2e3a59;',
                                            'placeholder': 'Entrez votre ID client'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div style="margin-bottom: 1rem;">
                                    <label style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; margin-bottom: 0.5rem; display: block;">Type de Réclamation</label>
                                    {{ form_widget(form.type, {
                                        'attr': {
                                            'class': 'form-select',
                                            'style': 'background-color: #f8f9fc; border: none; border-left: 3px solid #4e73df; border-radius: 6px; padding: 0.75rem; font-size: 1rem; color: #2e3a59;'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-12">
                                <div style="margin-bottom: 1rem;">
                                    <label style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; margin-bottom: 0.5rem; display: block;">Description</label>
                                    {{ form_widget(form.description, {
                                        'attr': {
                                            'class': 'form-control',
                                            'style': 'background-color: #f8f9fc; border: none; border-left: 3px solid #4e73df; border-radius: 6px; padding: 0.75rem; font-size: 1rem; color: #2e3a59;',
                                            'rows': '5',
                                            'placeholder': 'Décrivez votre problème en détail'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div style="margin-bottom: 1rem;">
                                    <label style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; margin-bottom: 0.5rem; display: block;">Email</label>
                                    {{ form_widget(form.email, {
                                        'attr': {
                                            'class': 'form-control',
                                            'style': 'background-color: #f8f9fc; border: none; border-left: 3px solid #4e73df; border-radius: 6px; padding: 0.75rem; font-size: 1rem; color: #2e3a59;',
                                            'placeholder': 'Votre adresse email'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div style="margin-bottom: 1rem;">
                                    <label style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; margin-bottom: 0.5rem; display: block;">Pièce jointe (optionnelle)</label>
                                    <div onclick="document.getElementById('{{ form.photo.vars.id }}').click()" 
                                         style="border: 2px dashed #4e73df; border-radius: 6px; padding: 2rem; text-align: center; cursor: pointer; background: #f8f9fc;">
                                        <i class="fas fa-cloud-upload-alt" style="font-size: 2rem; color: #4e73df; margin-bottom: 1rem;"></i>
                                        <p class="mb-0">Glissez-déposez ou cliquez pour télécharger</p>
                                        <small class="text-muted">Formats acceptés: JPG, PNG, PDF (max 5MB)</small>
                                    </div>
                                    {{ form_widget(form.photo, {
                                        'attr': {
                                            'class': 'd-none',
                                            'onchange': 'previewPhoto(this)'
                                        }
                                    }) }}
                                    <img id="photoPreview" alt="Aperçu de la photo" style="max-width: 100%; margin-top: 1rem; border-radius: 6px; display: none;">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end gap-2 mt-4">
                                <a href="{{ path('app_reclamation_index') }}" class="btn" 
                                   style="background: #f8f9fc; color: #858796; border: none; padding: 0.75rem 1.5rem; border-radius: 20px; font-weight: 500;">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                                <button type="submit" class="btn text-white" 
                                        style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); border: none; padding: 0.75rem 1.5rem; border-radius: 20px; font-weight: 500;">
                                    <i class="fas fa-save me-2"></i>Enregistrer
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}