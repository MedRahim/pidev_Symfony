{% extends 'base.html.twig' %}

{% block title %}Détails de la Réclamation{% endblock %}

{% block stylesheets %}
<style>
    .detail-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    .detail-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        border-radius: 15px 15px 0 0;
        padding: 1.5rem;
    }
    .detail-body {
        padding: 2rem;
    }
    .info-item {
        margin-bottom: 1.5rem;
    }
    .info-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }
    .info-value {
        font-size: 1.1rem;
        color: #2e3a59;
    }
    .description-box {
        background: #f8f9fc;
        border-radius: 10px;
        padding: 1.5rem;
        margin: 1.5rem 0;
    }
    .action-btn {
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        font-weight: 500;
        transition: all 0.2s;
    }
    .action-btn:hover {
        transform: translateY(-2px);
    }
    /* New styles for responses section */
    .responses-section {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e9ecef;
    }
    .response-card {
        background: #f8f9fc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border-left: 4px solid #4e73df;
    }
    .response-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
    }
    .response-date {
        color: #6c757d;
        font-size: 0.9rem;
    }
    .response-message {
        color: #2e3a59;
        font-size: 1.1rem;
        line-height: 1.5;
    }
    .no-responses {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
        background: #f8f9fc;
        border-radius: 12px;
        margin-top: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card detail-card">
                <div class="detail-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-file-alt me-2"></i>Détails de la Réclamation
                        </h4>
                        <a href="{{ path('app_reclamation_index') }}" class="btn btn-light">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>
                <div class="detail-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="info-label" style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px;">Client ID</div>
                                <div class="info-value" style="background-color: #f8f9fc; padding: 0.5rem; border-radius: 6px; border-left: 3px solid #4e73df;">{{ reclamation.clientId }}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label" style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px;">Type</div>
                                <div class="info-value" style="background-color: #f8f9fc; padding: 0.5rem; border-radius: 6px; border-left: 3px solid #4e73df;">{{ reclamation.type }}</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="info-label" style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px;">Date</div>
                                <div class="info-value" style="background-color: #f8f9fc; padding: 0.5rem; border-radius: 6px; border-left: 3px solid #4e73df;">{{ reclamation.datee|date('d M Y') }}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label" style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px;">Status</div>
                                <div class="info-value" style="background-color: #f8f9fc; padding: 0.5rem; border-radius: 6px; border-left: 3px solid #4e73df;">
                                    <span class="badge {{ reclamation.state ? 'bg-success' : 'bg-warning' }}">
                                        {{ reclamation.state ? 'Résolue' : 'En Attente' }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="info-item">
                                <div class="info-label" style="color: #4e73df; font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px;">Description</div>
                                <div class="info-value" style="background-color: #f8f9fc; padding: 0.5rem; border-radius: 6px; border-left: 3px solid #4e73df;">{{ reclamation.description }}</div>
                            </div>
                        </div>
                    </div>

                    {% if reclamation.photo %}
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="info-item">
                                <div class="info-label">Photo</div>
                                <div class="info-value">
                                    <img src="{{ asset('uploads/photos/' ~ reclamation.photo) }}" 
                                         alt="Photo de la réclamation" 
                                         class="img-fluid rounded shadow-sm"
                                         style="max-width: 500px;"
                                         onclick="showLargePhoto(this)">
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
<br>
                    <!-- New Responses Section -->
                    <div class="responses-section">
                        <h5 class="mb-4" style="color: #4e73df; font-size: 1.1rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px;">
                            <i class="fas fa-comments me-2"></i>Réponses de l'Administration
                        </h5>
                        
                        {% if reclamation.reponses is not empty %}
                            {% for reponse in reclamation.reponses|sort((a, b) => b.datee <=> a.datee) %}
                                <div class="response-card" style="background-color: #f8f9fc; padding: 1rem; border-radius: 6px; border-left: 3px solid #4e73df; margin-bottom: 1rem;">
                                    <div class="response-header">
                                        <div class="response-date" style="color: #4e73df; font-size: 0.85rem; font-weight: 500;">
                                            <i class="far fa-clock me-1"></i>
                                            {{ reponse.datee|date('d M Y H:i') }}
                                        </div>
                                    </div>
                                    <div class="response-message" style="margin-top: 0.5rem;">
                                        {{ reponse.message }}
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="no-responses" style="background-color: #f8f9fc; padding: 1.5rem; border-radius: 6px; border-left: 3px solid #4e73df; text-align: center;">
                                <i class="far fa-comment-dots mb-3" style="font-size: 2rem; color: #4e73df;"></i>
                                <p class="mb-0" style="color: #6c757d;">Aucune réponse pour le moment.</p>
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-4">
                        {% if not reclamation.state %}
                            <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" 
                               class="action-btn btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Modifier
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add SweetAlert2 for photo preview -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function showLargePhoto(imgElement) {
        Swal.fire({
            imageUrl: imgElement.src,
            imageAlt: 'Photo de la réclamation',
            width: 'auto',
            padding: 0,
            showConfirmButton: false,
            showCloseButton: true,
            customClass: {
                popup: 'photo-preview-modal'
            },
            background: 'transparent',
            backdrop: 'rgba(0,0,0,0.85)'
        });
    }
</script>
{% endblock %}