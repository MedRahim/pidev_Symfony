    <!-- Add Post Form -->
    <section class="blog_area section-padding">
        <div class="container">
            <div class="row">
                <!-- Blog Posts Section -->
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">
                        <div class="add-post-form mb-50">
                            <div class="card">
                                <div class="card-body">
                                    {{ form_start(form, {'attr': {'class': 'form-contact contact_form'}}) }}
                                    <div class="form-group">
                                        {{ form_widget(form.title, {
                                            'attr': {
                                                'class': 'form-control fb-input',
                                                'placeholder': 'What\'s on your mind?'
                                            }
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.content, {
                                            'attr': {
                                                'class': 'form-control fb-textarea',
                                                'placeholder': 'Write something here...',
                                                'rows': 5
                                            }
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.category, {
                                            'attr': {
                                                'class': 'form-control fb-select',
                                                'placeholder': 'Select Category'
                                            }
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.imageFile, {
                                            'attr': {
                                                'class': 'form-control fb-input',
                                                'placeholder': 'Upload Image'
                                            }
                                        }) }}
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        Post <i class="ti-arrow-right"></i>
                                    </button>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>

                        {% for post in blog_posts %}
                            <article class="blog_item">
                                {% if post.imageUrl %}
                                    <div class="blog_item_img">
                                        <img class="card-img rounded-0" src="{{ asset('uploads/images/' ~ post.imageUrl) }}" alt="{{ post.title }}">
                                        <a href="#" class="blog_item_date">
                                            <h3>{{ post.postDate|date('d') }}</h3>
                                            <p>{{ post.postDate|date('M') }}</p>
                                        </a>
                                    </div>
                                {% endif %}
                                <div class="blog_details">
                                    <a class="d-inline-block" href="{{ path('app_blog_post_show', {'id': post.id}) }}">
                                        <h2>{{ post.title }}</h2>
                                    </a>
                                    <p>{{ post.content|u.truncate(200, '...') }}</p>
                                    <ul class="blog-info-link">
                                        <li><i class="fa fa-folder"></i> {{ post.category }}</li>
                                        <li><a href="#"><i class="fa fa-comments"></i> {{ post.comments|length }} Comments</a></li>
                                        <li>
                                            <button class="like-btn" data-id="{{ post.id }}">
                                                <i class="fa fa-thumbs-up"></i> <span class="like-count">{{ post.likes|length }}</span> Likes
                                            </button>
                                        </li>
                                    </ul>
                                    <form method="post" action="{{ path('app_blog_post_like', {'id': post.id}) }}" class="like-form">
                                        <button type="submit" class="btn btn-sm btn-primary">Like</button>
                                    </form>
                                    <div class="comments-section">
                                        <h4>Comments</h4>
                                        {% for comment in post.comments %}
                                            <div class="comment">
                                                <p><strong>{{ comment.createdAt|date('d M Y H:i') }}</strong>: {{ comment.content }}</p>
                                            </div>
                                        {% else %}
                                            <p>No comments yet. Be the first to comment!</p>
                                        {% endfor %}
                                    </div>
                                    <form method="post" action="{{ path('app_blog_post_comment', {'id': post.id}) }}">
                                        <div class="form-group">
                                            <textarea name="comment" class="form-control" placeholder="Add a comment..." rows="3"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-secondary">Comment</button>
                                    </form>
                                </div>
                            </article>
                        {% else %}
                            <div class="alert alert-info">No posts available yet. Be the first to share!</div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Sidebar Section -->
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <!-- Search Widget -->
                        <aside class="single_sidebar_widget search_widget">
                            <form method="get" action="{{ path('app_blog_post_index') }}">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input type="text" name="search" class="form-control" placeholder="Search Keyword"
                                            value="{{ app.request.get('search') }}">
                                        <div class="input-group-append">
                                            <button class="btns" type="submit"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </aside>

                        <!-- Categories Widget -->
                        <aside class="single_sidebar_widget post_category_widget">
                            <h4 class="widget_title">Categories</h4>
                            <ul class="list cat-list">
                                {% for category in categories %}
