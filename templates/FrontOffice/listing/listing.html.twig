        <!-- Script recherche AJAX -->
        <script>
            $(function() {
                // Initialisation du date picker
                flatpickr(".flatpickr", {
                    dateFormat: "d/m/Y",
                    locale: "fr",
                    minDate: "today"
                });

                // Mise √† jour dynamique du label de prix
                $('#priceRange').on('input', function() {
                    $('#priceLabel').text($(this).val());
                });

                // Soumission automatique du formulaire
                $('#filterForm').find('input, select').on('change', function() {
                    $('#filterForm').submit();
                });

                // R√©initialisation des filtres
                $('#resetFilters').on('click', function() {
                    window.location.href = "{{ path('app_trips_index') }}";
                });
            });
                
                // Effacer la recherche
                $('#clearSearch').on('click', function() {
                    $('#searchTrip').val('');
                    $('#searchForm').submit();
                });
                
                // Recherche AJAX avec d√©lai
                let searchTimer;
                $('#searchTrip').on('keyup', function() {
                    clearTimeout(searchTimer);
                    let val = $(this).val();
                    
                    if(val.length === 0) {
                        // Si le champ est vide, soumettre le formulaire imm√©diatement
                        $('#searchForm').submit();
                    } else if(val.length > 2) {
                        // Afficher le spinner de chargement
                        $('.loading-spinner').show();
                        $('#tripsContainer').hide();
                        
                        searchTimer = setTimeout(function() {
                            $.get("{{ path('app_trips_search') }}", { 
                                q: val,
                                departure: "{{ app.request.get('departure') }}",
                                destination: "{{ app.request.get('destination') }}",
                                maxPrice: "{{ app.request.get('maxPrice') }}",
                                transport_type: "{{ app.request.get('transport_type') }}",
                                sort: "{{ app.request.get('sort') }}",
                                departure_date: "{{ app.request.get('departure_date') }}"
                            })
                            .done(data => {
                                $('#tripsContainer').html(data);
                                $('#tripsContainer').show();
                                $('.loading-spinner').hide();
                            })
                            .fail(() => {
                                $('#tripsContainer').html('<div class="col-12"><div class="alert alert-danger">Une erreur est survenue lors de la recherche</div></div>');
                                $('#tripsContainer').show();
                                $('.loading-spinner').hide();
                            });
                        }, 500); // D√©lai de 500ms apr√®s la derni√®re frappe
                    }
                });
                
                // Filtrage AJAX pour les autres champs
                $('#filterForm').on('submit', function(e) {
                    e.preventDefault();
                    
                    $('.loading-spinner').show();
                    $('#tripsContainer').hide();
                    
                    const formData = $(this).serialize();
                    
                    $.get("{{ path('app_trips_search') }}", formData)
                     .done(data => {
                         $('#tripsContainer').html(data);
                         $('#tripsContainer').show();
                         $('.loading-spinner').hide();
                         
                         // Mettre √† jour l'URL sans recharger la page
                         const queryString = formData.replace(/\+/g, '%20');
                         history.pushState(null, null, "{{ path('app_trips_index') }}?" + queryString);
                     })
                     .fail(() => {
                         $('#tripsContainer').html('<div class="col-12"><div class="alert alert-danger">Une erreur est survenue lors du filtrage</div></div>');
                         $('#tripsContainer').show();
                         $('.loading-spinner').hide();
                     });
                });
                
                // Gestion des changements de page avec AJAX
                $(document).on('click', '.pagination a', function(e) {
                    e.preventDefault();
                    const url = $(this).attr('href');
                    
                    $('.loading-spinner').show();
                    $('#tripsContainer').hide();
                    
                    $.get(url, function(data) {
                        $('#tripsContainer').html(data);
                        $('#tripsContainer').show();
                        $('.loading-spinner').hide();
                        
                        // Faire d√©filer vers le haut
                        $('html, body').animate({
                            scrollTop: $('#tripsContainer').offset().top - 100
                        }, 500);
                    });
                });
            });
        </script>
