{# templates/FrontOffice/listing/listing.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Trajets - TransportX{% endblock %}

{% block body %}
<main>
    <!-- Hero Section -->
    <section class="hero-area3 hero-overly2 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-9">
                    <div class="hero-cap text-center pt-50 pb-20">
                        <h2>Liste des Trajets</h2>
                    </div>
                    <!-- Formulaire de recherche principal -->
                    <form method="get" action="{{ path('app_trips_index') }}" class="search-box search-box2">
                        <div class="input-form">
                            <input type="text" name="q" placeholder="Que recherchez-vous ?" value="{{ app.request.get('q') }}">
                        </div>
                        <div class="select-form">
                            <div class="select-itms">
                                <select name="sort" id="select1">
                                    <option value="">Trier par</option>
                                    <option value="price" {{ app.request.get('sort') == 'price' ? 'selected' : '' }}>Prix</option>
                                    <option value="departureTime" {{ app.request.get('sort') == 'departureTime' ? 'selected' : '' }}>Heure de départ</option>
                                    <option value="distance" {{ app.request.get('sort') == 'distance' ? 'selected' : '' }}>Distance</option>
                                </select>
                            </div>
                        </div>
                        <div class="search-form">
                            <button type="submit" class="btn btn-primary">Rechercher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Fin Hero -->

    <!-- Zone de Listing -->
    <section class="listing-area pt-120 pb-120">
        <div class="container">
            <div class="row">
                <!-- Colonne Filtres Avancés -->
                <div class="col-xl-4 col-lg-4 col-md-6 mb-4">
                    <div class="card filter-card shadow-sm">
                        <div class="card-body">
                            <h4 class="mb-4"><i class="fas fa-filter me-2"></i>Filtres Avancés</h4>
                            <form method="get" action="{{ path('app_trips_index') }}">
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="departure" placeholder="Départ" value="{{ app.request.get('departure') }}">
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="destination" placeholder="Destination" value="{{ app.request.get('destination') }}">
                                </div>
                                <div class="mb-3">
                                    <input type="number" class="form-control" name="minPrice" placeholder="Prix min" value="{{ app.request.get('minPrice') }}">
                                </div>
                                <div class="mb-3">
                                    <input type="number" class="form-control" name="maxPrice" placeholder="Prix max" value="{{ app.request.get('maxPrice') }}">
                                </div>
                                <div class="mb-3">
                                    <input type="date" class="form-control" name="departureDate" value="{{ app.request.get('departureDate') }}">
                                </div>
                                <div class="mb-3">
                                    <select class="form-control" name="transport">
                                        <option value="">Transporteur</option>
                                        {% if transporteurs is defined %}
                                            {% for transport in transporteurs %}
                                                <option value="{{ transport }}" {{ app.request.get('transport') == transport ? 'selected' : '' }}>
                                                    {{ transport }}
                                                </option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary">Appliquer</button>
                                    <a href="{{ path('app_trips_index') }}" class="btn btn-secondary">Réinitialiser</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Call to Action -->
                    <div class="card mt-4 border-0 bg-primary text-white">
                        <div class="card-body text-center">
                            <h5><i class="fas fa-car-alt fa-2x mb-3"></i></h5>
                            <h5>Vous êtes conducteur ?</h5>
                            <p class="small">Proposez vos trajets et gagnez de l'argent</p>
                            <a href="{{ path('app_trips_new') }}" class="btn btn-light btn-sm">Proposer un trajet</a>
                        </div>
                    </div>
                </div>
                <!-- Colonne Résultats -->
                <div class="col-xl-8 col-lg-8 col-md-6">
                    <div class="mb-4 text-center">
                        <h3><i class="fas fa-route me-2"></i>Trajets Disponibles</h3>
                        <p class="text-muted">{{ trips|length }} trajet(s) trouvé(s)</p>
                    </div>
                    <div class="row">
                        {% for trip in trips %}
                            <div class="col-md-6 mb-4">
                                <div class="card trip-card">
                                    {% if trip.capacity < 10 %}
                                        <span class="badge bg-danger trip-badge">Plus que {{ trip.capacity }} places!</span>
                                    {% elseif trip.capacity < 20 %}
                                        <span class="badge bg-warning trip-badge">Dernières places</span>
                                    {% endif %}
                                    <div class="card-img-top">
                                        {% if trip.transportName == 'Bus' %}
                                            <img src="{{ asset('FrontOffice/assets/img/listing/bus.jpg') }}" class="img-fluid w-100" style="height: 180px; object-fit: cover;" alt="Bus">
                                        {% elseif trip.transportName == 'Train' %}
                                            <img src="{{ asset('FrontOffice/assets/img/listing/train.jpg') }}" class="img-fluid w-100" style="height: 180px; object-fit: cover;" alt="Train">
                                        {% else %}
                                            <img src="{{ asset('FrontOffice/assets/img/listing/default-transport.jpg') }}" class="img-fluid w-100" style="height: 180px; object-fit: cover;" alt="Transport">
                                        {% endif %}
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="{{ path('app_trips_show', {'id': trip.id}) }}" class="text-decoration-none text-dark">
                                                {{ trip.departure }} → {{ trip.destination }}
                                            </a>
                                        </h5>
                                        <p class="card-text text-muted small mb-2">
                                            <i class="far fa-calendar-alt me-1"></i> {{ trip.departureTime|date('d/m/Y') }}
                                        </p>
                                        <p class="card-text text-muted small">
                                            <i class="fas fa-clock me-1"></i> 
                                            {{ trip.departureTime|date('H:i') }} - {{ trip.arrivalTime|date('H:i') }}
                                        </p>
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                {% if trip.transportName == 'Bus' %}
                                                    <i class="fas fa-bus transport-icon"></i>
                                                {% elseif trip.transportName == 'Train' %}
                                                    <i class="fas fa-train transport-icon"></i>
                                                {% else %}
                                                    <i class="fas fa-car transport-icon"></i>
                                                {% endif %}
                                            </div>
                                            <div>
                                                <div class="fw-bold">{{ trip.transportName ?? 'Transport' }}</div>
                                                <div class="small text-muted">{{ trip.distance }} km • {{ trip.capacity }} places</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-white text-end border-0">
                                        <a href="{{ path('app_trips_show', {'id': trip.id}) }}" class="btn btn-outline-primary btn-sm">Voir détails</a>
                                        {# Nouveau lien vers la création de réservation #}
                                       <a href="{{ path('app_reservations_new', {'tripId': trip.id}) }}" class="btn btn-success btn-sm">
    <i class="fas fa-ticket-alt me-1"></i> Réserver
</a>

                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-12">
                                <div class="alert alert-info text-center">Aucun trajet trouvé</div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    {% set currentPage = currentPage|default(1) %}
                    {% set totalPages = totalPages|default(1) %}
                    {% if totalPages > 1 %}
                        <nav aria-label="Pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                {% if currentPage > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_trips_index', app.request.query.all|merge({'page': currentPage - 1})) }}" aria-label="Précédent">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>
                                {% endif %}
                                {% for i in range(max(1, currentPage - 2), min(totalPages, currentPage + 2) + 1) %}
                                    <li class="page-item {{ i == currentPage ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_trips_index', app.request.query.all|merge({'page': i})) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}
                                {% if currentPage < totalPages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_trips_index', app.request.query.all|merge({'page': currentPage + 1})) }}" aria-label="Suivant">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
