                        max: {{ sliderMax }},
                        from: {{ sliderFrom }},
                        to: {{ sliderTo }},
                        prefix: "$",
                        onStart: updateInputs,
                        onChange: updateInputs,
                        onFinish: updateInputs
                    }).data("ionRangeSlider");

                    // Ensure hidden fields are updated on page load
                    $('#amount-from').val({{ sliderFrom }});
                    $('#amount-to').val({{ sliderTo }});
                    $('#min_price').val({{ sliderFrom }});
                    $('#max_price').val({{ sliderTo }});
                }

                function updateInputs(data) {
                    $('#amount-from').val(data.from);
                    $('#amount-to').val(data.to);
                    $('#min_price').val(data.from);
                    $('#max_price').val(data.to);
                }

                $('.buy-btn').on('click', function(e){
                    e.preventDefault();

                    const productId = $(this).data('product-id');
                    const quantity = $('#quantity-' + productId).val();
                    const csrfToken = '{{ csrf_token("order") }}';

                    const url = '{{ path("order_create") }}';

                    $.ajax({
                        url: url,
                        method: 'POST',
                        data: JSON.stringify({ 
                            productId: productId, 
                            quantity: quantity, 
                            _csrf_token: csrfToken 
                        }),
                        contentType: 'application/json',
                        success: function(response) {
                            if (response.success) {
                                // Update modal with order details
                                $('#unitPrice').text(response.data.unitPrice);
                                $('#orderQuantity').text(response.data.quantity);
                                $('#totalPrice').text(response.data.totalPrice);
                                $('#orderModal').modal('show');
                            } else {
                                alert('Error placing order: ' + response.error);
                            }
                        },
                        error: function(xhr) {
                            alert('Request failed: ' + xhr.statusText);
                        }
                    });
                });
            });

            document.addEventListener('DOMContentLoaded', function () {
                const slider = document.getElementById('price-slider');
                const minPriceInput = document.getElementById('min-price');
                const maxPriceInput = document.getElementById('max-price');
                const minPriceDisplay = document.getElementById('min-price-display');
                const maxPriceDisplay = document.getElementById('max-price-display');
                const form = document.getElementById('product-filter-form');

                if (slider) {
                    // Initialize the slider
                    noUiSlider.create(slider, {
                        start: [{{ minPrice|default(sliderMin) }}, {{ maxPrice|default(sliderMax) }}],
                        connect: true,
                        range: {
                            'min': {{ sliderMin }},
                            'max': {{ sliderMax }}
                        },
                        step: 1,
                        tooltips: [true, true],
                        format: {
                            to: function (value) {
                                return Math.round(value);
                            },
                            from: function (value) {
                                return Number(value);
                            }
                        }
                    });

                    // Update display and hidden inputs when slider changes
                    slider.noUiSlider.on('update', function (values) {
                        const minValue = Math.round(values[0]);
                        const maxValue = Math.round(values[1]);
                        
                        minPriceInput.value = minValue;
                        maxPriceInput.value = maxValue;
                        
                        minPriceDisplay.textContent = `DT ${minValue}`;
                        maxPriceDisplay.textContent = `DT ${maxValue}`;
                    });

                    // Initialize slider values from URL parameters if they exist
                    const urlParams = new URLSearchParams(window.location.search);
                    const urlMinPrice = urlParams.get('minPrice');
                    const urlMaxPrice = urlParams.get('maxPrice');

                    if (urlMinPrice && urlMaxPrice) {
                        slider.noUiSlider.set([urlMinPrice, urlMaxPrice]);
                    }
                }

                // Handle form submission only when Apply Filters button is clicked
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get current values
                    const minPrice = minPriceInput.value;
                    const maxPrice = maxPriceInput.value;
                    const searchName = document.getElementById('search-name').value;
                    const category = document.getElementById('search-category').value;

                    // Build URL with parameters
                    let url = '{{ path("app_product_listing") }}';
                    const params = new URLSearchParams();
                    
                    if (searchName) params.append('name', searchName);
                    if (category) params.append('category', category);
                    if (minPrice) params.append('minPrice', minPrice);
                    if (maxPrice) params.append('maxPrice', maxPrice);

                    // Redirect to the filtered URL
                    window.location.href = url + (params.toString() ? '?' + params.toString() : '');
                });
            });

