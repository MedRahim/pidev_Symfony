<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pannier</title>
    <link rel="stylesheet" href="{{ asset('FrontOffice/assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('FrontOffice/assets/css/style.css') }}">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }
        h1 {
            font-size: 2.8rem;
            color: #343a40;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }
        .single-listing {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            background-color: #ffffff;
            padding: 20px;
        }
        .single-listing:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }
        .list-caption h5 {
            font-size: 1.5rem;
            color: #007bff;
            font-weight: bold;
        }
        .list-caption p {
            font-size: 1rem;
            color: #6c757d;
        }
        .btn-primary, .btn-secondary, .btn-danger {
            border-radius: 30px;
            padding: 12px 30px;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
        .btn-secondary:hover {
            background-color: #6c757d;
            transform: scale(1.05);
        }
        .btn-danger:hover {
            background-color: #bd2130;
            transform: scale(1.05);
        }
        .no-orders {
            text-align: center;
            margin-top: 50px;
        }
        .no-orders p {
            font-size: 1.2rem;
            color: #6c757d;
        }
        .no-orders a {
            margin-top: 15px;
        }
        .form-check-input {
            margin-right: 10px;
            width: 20px; /* Increased width */
            height: 20px; /* Increased height */
            cursor: pointer; /* Pointer cursor for better UX */
        }
        .order-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }
        .order-actions button {
            width: 48%;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Pannier</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        {% if orders is defined and orders is not empty %}
            <form method="post" action="{{ path('app_order_pannier_pay') }}" id="payment-form">
                <div class="d-flex justify-content-between mt-5">
                    <div>
                        <button type="submit" class="btn btn-primary">Pay Selected Orders</button>
                        <button type="button" class="btn btn-danger" onclick="deleteSelectedOrders()">Delete Selected</button>
                    </div>
                    <a href="{{ path('app_product_listing') }}" class="btn btn-secondary">Continue Shopping</a>
                </div>

                <div class="row justify-content-center mt-4">
                    {% for order in orders %}
                    <div class="col-lg-5 mb-4">
                        <div class="single-listing shadow-sm">
                            <div class="list-caption">
                                <div class="d-flex align-items-center">
                                    <input type="checkbox" name="order_ids[]" value="{{ order.id }}"
                                           class="form-check-input order-checkbox">
                                    <h5 class="ms-2">Order #{{ order.id }}</h5>
                                </div>
                                <p class="text-muted"><strong>Product:</strong> {{ order.product.name }}</p>
                                <p><strong>Quantity:</strong>
                                    {% for item in order.orderItems %}
                                        {{ item.quantity }}
                                    {% endfor %}
                                </p>
                                <p><strong>Total Price:</strong>
                                    {% for item in order.orderItems %}
                                        {{ item.priceTotal }}
                                    {% endfor %}
                                </p>
                                <p><strong>Date:</strong> {{ order.date|date('Y-m-d H:i') }}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </form>

            <form method="post" action="{{ path('app_order_delete_multiple') }}" id="delete-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_multiple') }}">
                <input type="hidden" name="order_ids" id="delete-order-ids">
            </form>

            <script>
            function deleteSelectedOrders() {
                const checkboxes = document.querySelectorAll('.order-checkbox:checked');
                const orderIds = Array.from(checkboxes).map(cb => cb.value);
               
                if (orderIds.length === 0) {
                    alert('Please select at least one order to delete');
                    return;
                }
               
                if (confirm('Are you sure you want to delete the selected orders?')) {
                    document.getElementById('delete-order-ids').value = orderIds.join(',');
                    document.getElementById('delete-form').submit();
                }
            }
            </script>
        {% else %}
            <div class="no-orders">
                <p>No confirmed orders in your pannier.</p>
                <a href="{{ path('app_product_listing') }}" class="btn btn-primary">Start Shopping</a>
            </div>
        {% endif %}
    </div>
    <script src="{{ asset('FrontOffice/assets/js/bootstrap.min.js') }}"></script>
</body>
</html>
