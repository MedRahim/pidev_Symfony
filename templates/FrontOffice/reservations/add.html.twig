{# templates/FrontOffice/reservations/add.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    /* Vos styles spécifiques au seatmap */
    #seat-map {
      width: 100%;
      height: 600px;
      position: relative;
      background-color: #f8f9fa;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      margin: 20px 0;
    }
    .seat-standard {
      background-color: #4CAF50;
      border: 2px solid #388E3C;
      border-radius: 4px;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    .seat-premium {
      background-color: #2196F3;
      border: 2px solid #1565C0;
      border-radius: 4px;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    .reserved {
      background-color: #f44336 !important;
      border-color: #d32f2f !important;
      cursor: not-allowed !important;
    }
    .selected {
      background-color: #FFC107 !important;
      border-color: #FFA000 !important;
      transform: scale(1.05);
      box-shadow: 0 0 8px rgba(0,0,0,0.2);
    }
    .loading-overlay {
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(255,255,255,0.9);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 100;
    }
    .seatmap-error {
      padding: 20px;
      text-align: center;
      background: #f8d7da;
      border: 1px solid #f5c6cb;
      border-radius: 5px;
      margin: 20px 0;
    }
    @media (max-width: 768px) {
      #seat-map { height: 400px; }
    }
  </style>
{% endblock %}

{% block body %}
  <div class="container py-5">
    <h1 class="mb-4">Réservez votre voyage</h1>
    <div class="alert alert-info">
      Places disponibles : <span id="available-seats">{{ trip.capacity }}</span>
    </div>

    {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
      {{ form_errors(form) }}
      <div class="row mb-4">
        <div class="col-md-6">
          {{ form_row(form.seatNumber, { attr: { class: 'form-control' } }) }}
        </div>
        <div class="col-md-6">
          {{ form_row(form.seatType,   { attr: { class: 'form-select' } }) }}
        </div>
      </div>
      <div class="mb-4 p-3 bg-light rounded">
        <h5 class="fw-bold">
          Prix total : <span id="price" class="text-success">0.00</span> TND
        </h5>
      </div>

      <div id="seat-map"
           data-controller="seatmap"
           data-seatmap-trip-id-value="{{ trip.id }}"
           data-seatmap-api-url-value="{{ path('api_seat_configuration', { tripId: trip.id }) }}"
           data-seatmap-fallback-seats-value="{{ trip.capacity }}"
           data-seatmap-fallback-price-value="{{ trip.price }}">
        <div class="loading-overlay">
          <div class="spinner-border text-primary" style="width:3rem;height:3rem;"></div>
          <p class="mt-3">Chargement du plan des sièges...</p>
        </div>
        <div class="seatmap-error"></div>
      </div>

      <input type="hidden" id="selectedSeats" name="selectedSeats" />

      <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="bi bi-check-circle me-2"></i> Confirmer la réservation
        </button>
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}

{# 
  Remarquez : on ne redéfinit pas le bloc javascripts ici, 
  ce qui évite de ré-inclure deux fois encore_entry_script_tags('app').
#}
