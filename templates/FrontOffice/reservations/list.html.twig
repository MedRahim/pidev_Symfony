{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold"><i class="fas fa-calendar-check me-2"></i>Mes Réservations</h1>
        <a href="{{ path('app_trips_index') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus me-2"></i>Nouvelle réservation
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            {% if reservations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Trajet</th>
                                <th>Date</th>
                                <th>Sièges</th>
                                <th>Type</th>
                                <th>Statut</th>
                                <th>Prix</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                            <tr>
                                <td><strong>#{{ reservation.id }}</strong></td>
                                <td>
                                    <div>{{ reservation.trip.departure }} → {{ reservation.trip.destination }}</div>
                                    <small class="text-muted">{{ reservation.trip.departureTime|date('d/m/Y H:i') }}</small>
                                </td>
                                <td>{{ reservation.reservationTime|date('d/m/Y') }}</td>
                                <td>{{ reservation.seatNumber }}</td>
                                <td>
                                    <span class="badge bg-{{ reservation.seatType == 'Standard' ? 'primary' : 'warning' }}">
                                        {{ reservation.seatType }}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-{{ reservation.status == 'confirmed' ? 'success' : (reservation.status == 'cancelled' ? 'secondary' : 'warning') }}">
                                        {{ reservation.paymentStatus == 'confirmed' ? 'Confirmé' : (reservation.status == 'cancelled' ? 'Annulé' : 'En attente') }}
                                    </span>
                                </td>
                                <td>
                                    {% set basePrice = reservation.trip.price %}
                                    {% if reservation.seatType == 'Standard' %}
                                        {{ (basePrice * reservation.seatNumber) + (10 * reservation.seatNumber) }} TND
                                    {% else %}
                                        {{ basePrice * reservation.seatNumber }} TND
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                                        <a href="{{ path('app_reservations_details', {'id': reservation.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i> Voir
                                        </a>
                                        
                                        {# Bouton Modifier - Toujours visible sauf si annulé #}
                                        {% if reservation.status != 'cancelled' %}
                                            <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit me-1"></i> Modifier
                                            </a>
                                        {% endif %}
                                        
                                        {# Bouton Payer - Seulement pour les réservations en attente #}
                                        {% if reservation.paymentStatus == 'pending' and reservation.status != 'cancelled' %}
                                            <a href="{{ path('app_reservations_pay_pending', {'id': reservation.id}) }}" class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-credit-card me-1"></i> Payer
                                            </a>
                                        {% endif %}
                                        
                                        {# Bouton Annuler - Seulement pour les réservations non annulées #}
                                        {% if reservation.status != 'cancelled' %}
                                            <form action="{{ path('app_reservations_cancel', {'id': reservation.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-times-circle me-1"></i> Annuler
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info text-center py-4">
                    <p class="mb-3 fs-5">Vous n'avez aucune réservation pour le moment.</p>
                    <a href="{{ path('app_trips_index') }}" class="btn btn-outline-primary">
                        <i class="fas fa-route me-2"></i>Voir les voyages disponibles
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}