{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    /* =========================
       1. Variables de couleur
       ========================= */
    :root {
      --primary: #4361ee;
      --primary-light: #eef2ff;
      --secondary: #3f37c9;
      --success: #4cc9f0;
      --danger: #f72585;
      --warning: #f8961e;
      --info: #4895ef;
      --light: #f8f9fa;
      --dark: #212529;
      --premium: #6a1b9a;
    }

    /* =========================
       2. Fond général et container
       ========================= */
    body {
      background: linear-gradient(180deg, var(--light) 0%, var(--primary-light) 100%);
    }
    .container.py-4 {
      background-color: white;
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 4px 20px rgba(67,97,238,0.1);
      margin-top: 2rem;
    }

    /* =========================
       3. En-tête de page
       ========================= */
    hr {
      border: none !important;
    }
    .page-header {
      background-color: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      margin-bottom: 2rem;
      border-bottom: none;
    }
    .page-title {
      color: var(--primary);
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: .75rem;
    }
    .page-title i { font-size: 1.5rem; }
    .header-actions .btn {
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      transition: background-color .2s, transform .1s;
    }
    .header-actions .btn:hover {
      transform: translateY(-1px);
    }

    /* =========================
       4. Filtres
       ========================= */
    .filter-container {
      background-color: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      margin-bottom: 2rem;
    }
    .btn-outline-secondary {
      color: var(--primary);
      border-color: var(--primary);
      transition: background-color .2s;
    }
    .btn-outline-secondary.active,
    .btn-outline-secondary:hover {
      background-color: var(--primary);
      color: white;
    }

    /* =========================
       5. Tableau et zébrage
       ========================= */
    .table-responsive {
      border-radius: 12px;
      overflow: hidden;
    }
    .table thead th {
      background-color: var(--primary);
      color: white;
      border: none;
    }
    .table tbody tr:nth-of-type(odd) {
      background-color: rgba(67,97,238,0.03);
    }
    .table-hover tbody tr:hover {
      background-color: rgba(67,97,238,0.1);
      cursor: pointer;
    }

    th { font-weight: 600; }
    td.fw-bold { color: var(--dark); }

    /* =========================
       6. Cartes de réservation
       ========================= */
    .reservation-card {
      border: 1px solid rgba(67,97,238,0.15);
      border-radius: 12px;
      overflow: hidden;
      background-color: white;
      transition: transform .3s, box-shadow .3s;
    }
    .reservation-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 24px rgba(67,97,238,0.2);
    }

    /* =========================
       7. Badges
       ========================= */
    .status-badge,
    .premium-badge,
    .standard-badge {
      padding: .35rem .75rem;
      border-radius: 20px;
      font-weight: 500;
      font-size: .85rem;
      display: inline-flex;
      align-items: center;
      gap: .25rem;
      border: 1px solid currentColor;
    }
    .confirmed { background-color: rgba(76,201,240,0.1); color: var(--success); }
    .pending   { background-color: rgba(248,150,30,0.1); color: var(--warning); }
    .cancelled { background-color: rgba(108,117,125,0.1); color: var(--secondary); }
    .premium-badge  { background-color: rgba(106,27,154,0.1); color: var(--premium); }
    .standard-badge { background-color: rgba(108,117,125,0.1); color: var(--dark); }

    /* =========================
       8. Boutons d’action
       ========================= */
    .action-btn {
      width: 36px; height: 36px;
      display: inline-flex;
      align-items: center; justify-content: center;
      border-radius: 50%;
      transition: all .2s;
      border: none;
      color: white;
    }
    .action-btn:hover {
      transform: scale(1.1);
      opacity: .9;
    }
    .btn-details { background-color: var(--info); }
    .btn-edit    { background-color: var(--warning); }
    .btn-pay     { background-color: var(--success); }
    .btn-cancel  { background-color: var(--danger); }
    .btn-qrcode  { background-color: var(--premium); }

    /* =========================
       9. Responsive
       ========================= */
    @media (max-width: 768px) {
      .header-actions { flex-direction: column; gap: .75rem; }
      .header-actions .btn { width: 100%; }
      .action-buttons { flex-wrap: wrap; gap: .5rem; }
    }
  </style>
{% endblock %}

{% block body %}
<div class="container py-4">
  {# En-tête #}
  <div class="page-header d-flex flex-column flex-md-row justify-content-between align-items-md-center">
    <h1 class="page-title">
      <i class="bi bi-calendar-check"></i>Mes Réservations
    </h1>
    <div class="header-actions mt-3 mt-md-0">
      <a href="{{ path('app_dashboard') }}" class="btn btn-info rounded-pill px-4">
        <i class="bi bi-bar-chart-line me-1"></i>Dashboard
      </a>
      <a href="{{ path('app_trips_index') }}" class="btn btn-primary rounded-pill px-4">
        <i class="bi bi-plus-lg me-1"></i>Nouvelle réservation
      </a>
    </div>
  </div>

  {# Filtres #}
  <div class="filter-container">
    <div class="row">
      <div class="col-md-6 mb-3 mb-md-0">
        <div class="input-group">
          <span class="input-group-text bg-white border-end-0">
            <i class="bi bi-search text-primary"></i>
          </span>
          <input id="reservationSearch" type="text" class="form-control border-start-0"
                 placeholder="Rechercher une réservation...">
        </div>
      </div>
      <div class="col-md-6">
        <div class="btn-group w-100" role="group">
          {% set filters = {
            'all': {'label':'Toutes',      'icon':'bi-list-ul'},
            'confirmed': {'label':'Confirmées','icon':'bi-check-circle'},
            'pending':   {'label':'En attente','icon':'bi-hourglass'},
            'cancelled': {'label':'Annulées',  'icon':'bi-x-circle'}
          } %}
          {% for key, f in filters %}
            <button type="button"
                    class="btn btn-outline-secondary rounded-pill {{ loop.first ? 'active' : '' }}"
                    data-filter="{{ key }}"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="{{ f.label }}">
              <i class="bi {{ f.icon }}"></i>
              <span class="d-none d-md-inline ms-1">{{ f.label }}</span>
            </button>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  {# Liste des réservations #}
  <div class="card reservation-card">
    <div class="card-body p-0">
      {% if reservations is not empty %}
        <div class="table-responsive">
          <table id="reservationsTable" class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>#</th>
                <th>Trajet</th>
                <th>Date</th>
                <th>Sièges</th>
                <th>Type</th>
                <th>Statut</th>
                <th>Prix</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for reservation in reservations %}
                <tr data-status="{{ reservation.status }}">
                  <td class="fw-bold">#{{ reservation.id }}</td>
                  <td>
                    <strong>{{ reservation.trip.departure }} → {{ reservation.trip.destination }}</strong><br>
                    <small class="text-muted">{{ reservation.trip.departureTime|date('d/m/Y H:i') }}</small>
                  </td>
                  <td>{{ reservation.reservationTime|date('d/m/Y') }}</td>
                  <td>{{ reservation.seatNumber }}</td>
                  <td>
                    <span class="badge {{ reservation.seatType == 'Premium' ? 'premium-badge' : 'standard-badge' }}">
                      <i class="bi {{ reservation.seatType == 'Premium' ? 'bi-star-fill' : 'bi-person-fill' }} me-1"></i>
                      {{ reservation.seatType }}
                    </span>
                  </td>
                  <td>
                    <span class="status-badge {{ reservation.status }}">
                      <i class="bi
                         {{ reservation.status=='confirmed' ? 'bi-check-circle-fill' : '' }}
                         {{ reservation.status=='pending'   ? 'bi-hourglass' : '' }}
                         {{ reservation.status=='cancelled' ? 'bi-x-circle-fill' : '' }}
                      "></i>
                      {{ reservation.status|capitalize }}
                    </span>
                  </td>
                  <td class="fw-medium">
                    {{ ((reservation.trip.price + (reservation.seatType=='Premium'?10:0)) * reservation.seatNumber)|number_format(2,',',' ') }} TND
                  </td>
                  <td>
                    <div class="d-flex justify-content-end gap-2 action-buttons">
                      {# Détails #}
                      <a href="{{ path('app_reservations_details', {'id':reservation.id}) }}"
                         class="action-btn btn-details" data-bs-toggle="tooltip" title="Détails">
                        <i class="bi bi-eye-fill"></i>
                      </a>
                      {# Modifier #}
                      {% if reservation.status!='cancelled' %}
                        <a href="{{ path('app_reservations_edit', {'id':reservation.id}) }}"
                           class="action-btn btn-edit" data-bs-toggle="tooltip" title="Modifier">
                          <i class="bi bi-pencil-fill"></i>
                        </a>
                      {% endif %}
                      {# QR Code #}
                      <a href="{{ path('app_reservations_qrcode', {'id':reservation.id}) }}"
                         class="action-btn btn-qrcode" data-bs-toggle="tooltip" title="QR Code" target="_blank">
                        <i class="bi bi-qr-code"></i>
                      </a>
                      {# Payer #}
                      {% if reservation.status=='pending' %}
                        <a href="{{ path('app_reservations_pay_pending', {'id':reservation.id}) }}"
                           class="action-btn btn-pay" data-bs-toggle="tooltip" title="Payer">
                          <i class="bi bi-credit-card-fill"></i>
                        </a>
                      {% endif %}
                      {# Annuler #}
                      {% if reservation.status!='cancelled' %}
                        <form method="post" action="{{ path('app_reservations_cancel',{'id':reservation.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr ?')" class="d-inline">
                          <input type="hidden" name="_token" value="{{ csrf_token('cancel'~reservation.id) }}">
                          <button type="submit" class="action-btn btn-cancel" data-bs-toggle="tooltip" title="Annuler">
                            <i class="bi bi-trash-fill"></i>
                          </button>
                        </form>
                      {% endif %}
                    </div>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% else %}
        <div class="text-center empty-state py-5">
          <i class="bi bi-calendar-x"></i>
          <h5 class="mt-3 fw-medium">Aucune réservation trouvée</h5>
          <p>Vous n'avez effectué aucune réservation pour le moment.</p>
          <a href="{{ path('app_trips_index') }}" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-search me-2"></i>Explorer les trajets disponibles
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Tooltips
      document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
        new bootstrap.Tooltip(el);
      });

      const search = document.getElementById('reservationSearch');
      const rows = document.querySelectorAll('#reservationsTable tbody tr');

      // Recherche live + filtres
      const filterButtons = document.querySelectorAll('[data-filter]');
      function refreshTable() {
        const term = search.value.toLowerCase();
        const active = document.querySelector('[data-filter].active')?.dataset.filter || 'all';
        rows.forEach(r => {
          const okSearch = r.textContent.toLowerCase().includes(term);
          const okFilter = active==='all' || r.dataset.status===active;
          r.style.display = (okSearch && okFilter) ? '' : 'none';
        });
      }
      search.addEventListener('input', refreshTable);
      filterButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          filterButtons.forEach(b=>b.classList.remove('active'));
          btn.classList.add('active');
          refreshTable();
        });
      });
    });
  </script>
{% endblock %}
