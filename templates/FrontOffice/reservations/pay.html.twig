{% extends 'base.html.twig' %}

{% block title %}Paiement de la réservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-credit-card me-2"></i>Paiement de la réservation
                    </h2>
                </div>
                
                <div class="card-body">
                    {# Affichage différent selon qu'il s'agit d'une nouvelle réservation ou d'une modification #}
                    {% if app.session.get('reservation_data').is_edit is defined and app.session.get('reservation_data').is_edit %}
                        <div class="alert alert-info mb-4">
                            <h5 class="alert-heading">Modification de réservation</h5>
                            <ul class="mb-0">
                                <li>Nombre de sièges: {{ seatNumber }}</li>
                                <li>Type de siège: {{ seatType }}</li>
                                <li>Ancien prix: {{ app.session.get('reservation_data').original_price }} TND</li>
                                <li>Nouveau prix: <strong>{{ price }} TND</strong></li>
                                <li>Différence: 
                                    <span class="fw-bold {{ (price - app.session.get('reservation_data').original_price) > 0 ? 'text-success' : 'text-danger' }}">
                                        {{ price - app.session.get('reservation_data').original_price }} TND
                                    </span>
                                </li>
                            </ul>
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-4">
                            <h5 class="alert-heading">Détails de la réservation</h5>
                            <ul class="mb-0">
                                <li>Nombre de sièges: {{ seatNumber }}</li>
                                <li>Type de siège: {{ seatType }}</li>
                                <li>Montant à payer: <strong>{{ price }} TND</strong></li>
                            </ul>
                        </div>
                    {% endif %}
                    
                    <form method="post" id="paymentForm">
                        <div class="mb-3">
                            <label for="cardNumber" class="form-label">Numéro de carte</label>
                            <input type="text" class="form-control" id="cardNumber" name="cardNumber" 
                                   required pattern="\d{16}" 
                                   title="16 chiffres sans espaces"
                                   oninput="this.value = this.value.replace(/\D/g, '')">
                            <small class="text-muted">Format: 16 chiffres sans espaces</small>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="expiryDate" class="form-label">Date d'expiration</label>
                                <div class="input-group date" id="datepicker">
                                    <input type="text" class="form-control" id="expiryDate" name="expiryDate" 
                                           required readonly
                                           placeholder="MM/AAAA">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar-alt"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cvv" class="form-label">Code de sécurité (CVV)</label>
                                <input type="text" class="form-control" id="cvv" name="cvv" 
                                       required pattern="\d{3,4}"
                                       title="3 ou 4 chiffres"
                                       oninput="this.value = this.value.replace(/\D/g, '')">
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            {% if app.session.get('reservation_data').is_edit is defined and app.session.get('reservation_data').is_edit %}
                                <a href="{{ path('app_reservations_edit_confirmation', {'id': app.session.get('reservation_data').reservation_id}) }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour
                                </a>
                            {% else %}
                                <a href="{{ path('app_reservations_choose') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour
                                </a>
                            {% endif %}
                            <button type="submit" class="btn btn-success" id="submitBtn">
                                <i class="fas fa-check-circle me-2"></i>
                                {% if app.session.get('reservation_data').is_edit is defined and app.session.get('reservation_data').is_edit %}
                                    Payer la différence
                                {% else %}
                                    Confirmer le paiement
                                {% endif %}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.fr.min.js"></script>
    
    <script>
    $(document).ready(function(){
        // Initialisation du datepicker
        $('#datepicker').datepicker({
            format: "mm/yyyy",
            startView: "months", 
            minViewMode: "months",
            language: "fr",
            autoclose: true,
            todayHighlight: true,
            startDate: new Date()
        });
        
        // Validation du formulaire
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            const cardNumber = document.getElementById('cardNumber').value;
            const expiryDate = document.getElementById('expiryDate').value;
            const cvv = document.getElementById('cvv').value;
            const submitBtn = document.getElementById('submitBtn');
            
            // Désactiver le bouton pour éviter les doubles clics
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Traitement...';
            
            // Validation supplémentaire côté client
            if (!/^\d{16}$/.test(cardNumber)) {
                e.preventDefault();
                alert('Numéro de carte invalide');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-check-circle me-2"></i>' + 
                    ('{{ app.session.get('reservation_data').is_edit is defined and app.session.get('reservation_data').is_edit ? "Payer la différence" : "Confirmer le paiement" }}');
                return false;
            }
            
            if (!expiryDate) {
                e.preventDefault();
                alert('Veuillez sélectionner une date d\'expiration');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-check-circle me-2"></i>' + 
                    ('{{ app.session.get('reservation_data').is_edit is defined and app.session.get('reservation_data').is_edit ? "Payer la différence" : "Confirmer le paiement" }}');
                return false;
            }
            
            if (!/^\d{3,4}$/.test(cvv)) {
                e.preventDefault();
                alert('Code CVV invalide');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-check-circle me-2"></i>' + 
                    ('{{ app.session.get('reservation_data').is_edit is defined and app.session.get('reservation_data').is_edit ? "Payer la différence" : "Confirmer le paiement" }}');
                return false;
            }
            
            return true;
        });
    });
    </script>
{% endblock %}
{% endblock %}