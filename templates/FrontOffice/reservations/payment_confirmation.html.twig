{% extends 'base.html.twig' %}

{% block title %}Confirmation de paiement{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-check-circle me-2"></i>Paiement confirmé
                    </h2>
                </div>
                
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h3 class="mb-4">Merci pour votre paiement !</h3>
                    
                    <div class="alert alert-success">
                        <p class="mb-2">Votre réservation #{{ reservation.id }} a été confirmée.</p>
                        <p class="mb-0">Montant payé : {{ reservation.trip.price * reservation.seatNumber }} TND</p>
                    </div>
                    
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="{{ path('app_reservations_details', {'id': reservation.id}) }}" class="btn btn-primary">
                           <i class="fas fa-eye me-2"></i>Voir les détails
                        </a>
                        <a href="{{ path('app_reservations_list') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Mes réservations
                        </a>
                        <a href="{{ path('home') }}" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
