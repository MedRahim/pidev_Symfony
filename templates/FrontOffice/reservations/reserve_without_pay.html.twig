{% extends 'base.html.twig' %}

{% block title %}Réservation enregistrée{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-warning">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-clock me-2"></i>Réservation enregistrée
                    </h2>
                </div>
                
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-clock text-warning" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h3 class="mb-4">Votre réservation est enregistrée !</h3>
                    
                    <div class="alert alert-info">
                        <p class="mb-2">Vous avez réservé {{ reservation.seatNumber }} siège(s) pour le trajet :</p>
                        <p class="mb-2"><strong>{{ reservation.trip.departure }} → {{ reservation.trip.destination }}</strong></p>
                        <p class="mb-0">Date de départ : {{ reservation.trip.departureTime|date('d/m/Y H:i') }}</p>
                    </div>
                    
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">Paiement en attente</h5>
                        <p>
                            Vous avez 24 heures pour effectuer le paiement de 
                            <strong>{{ reservation.trip.price * reservation.seatNumber }} TND</strong>
                            et confirmer définitivement votre réservation.
                        </p>
                    </div>
                    
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="{{ path('app_reservations_payment', {'id': reservation.id}) }}" 
                           class="btn btn-success">
                           <i class="fas fa-credit-card me-2"></i>Payer maintenant
                        </a>
                        <a href="{{ path('app_reservations_details', {'id': reservation.id}) }}" 
                           class="btn btn-primary">
                           <i class="fas fa-eye me-2"></i>Voir les détails
                        </a>
                        <a href="{{ path('app_reservations_list') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Mes réservations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}