{# templates/admin/dashboard/index.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-0">Tableau de Bord Administratif</h1>
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
            Actions Rapides
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="{{ path('app_admin_trips_new') }}">Nouveau Trajet</a></li>
            <li><a class="dropdown-item" href="{{ path('export_reservations_csv') }}">Exporter CSV</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#sendNotificationModal">Envoyer Notification</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block main %}
<div class="container-fluid px-4">

    {# Cartes statistiques #}
    <div class="row g-4 mb-4">
        {# Trajets #}
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-start border-primary border-4 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted fw-semibold">Trajets Actifs</h6>
                        <h2 class="mb-0">{{ nbActiveTrips }}</h2>
                        <small class="text-muted">{{ nbTrips }} au total</small>
                    </div>
                    <i class="bx bx-map text-primary" style="font-size:2rem"></i>
                </div>
            </div>
        </div>

        {# Réservations #}
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-start border-success border-4 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted fw-semibold">Réservations</h6>
                        <h2 class="mb-0">{{ nbReservations }}</h2>
                        <small class="text-muted">{{ nbPendingReservations }} en attente</small>
                    </div>
                    <i class="bx bx-calendar-check text-success" style="font-size:2rem"></i>
                </div>
            </div>
        </div>

        {# Revenu #}
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-start border-info border-4 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted fw-semibold">Revenu Mensuel</h6>
                        <h2 class="mb-0">{{ revenue|number_format(3, ',', '.') }} TND</h2>
                        <small class="text-{{ revenueGrowth >= 0 ? 'success' : 'danger' }}">
                            {{ revenueGrowth }}% vs mois dernier
                        </small>
                    </div>
                    <i class="bx bx-line-chart text-info" style="font-size:2rem"></i>
                </div>
            </div>
        </div>

        {# Utilisateurs #}
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-start border-warning border-4 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted fw-semibold">Utilisateurs</h6>
                        <h2 class="mb-0">{{ nbUsers }}</h2>
                        <small class="text-muted">{{ newUsers }} nouveaux ce mois</small>
                    </div>
                    <i class="bx bx-user-circle text-warning" style="font-size:2rem"></i>
                </div>
            </div>
        </div>
    </div>

    {# Graphiques #}
    <div class="row g-4 mb-4">
        <div class="col-12 col-xl-8">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Tendance des Réservations</h5>
                </div>
                <div class="card-body">
                    <canvas id="reservationTrendChart" height="150"></canvas>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-4">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Statut des Réservations</h5>
                </div>
                <div class="card-body">
                    <canvas id="reservationStatusChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    {# Activité Récente #}
    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Activité Récente</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% if recentActivities is not empty %}
                            {% for activity in recentActivities %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>{{ activity.title }}</strong>
                                            <p class="mb-1">{{ activity.description }}</p>
                                        </div>
                                        <small class="text-muted">{{ activity.date|date('d/m/Y H:i') }}</small>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="list-group-item text-center py-4 text-muted">
                                Aucune activité récente à afficher
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Modal Notifications #}
<div class="modal fade" id="sendNotificationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Envoyer une Notification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="notificationForm">
                    <div class="mb-3">
                        <label class="form-label">Destinataires</label>
                        <select class="form-select">
                            <option>Tous les utilisateurs</option>
                            <option>Utilisateurs actifs</option>
                            <option>Clients avec réservations</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" rows="4"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button class="btn btn-primary">Envoyer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tendance des réservations
    new Chart(document.getElementById('reservationTrendChart'), {
        type: 'line',
        data: {
            labels: {{ trendDates|json_encode|raw }},
            datasets: [{
                label: 'Réservations',
                data: {{ trendValues|json_encode|raw }},
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            }
        }
    });

    // Statut des réservations
    new Chart(document.getElementById('reservationStatusChart'), {
        type: 'doughnut',
        data: {
            labels: {{ statusLabels|json_encode|raw }},
            datasets: [{
                data: {{ statusValues|json_encode|raw }},
                backgroundColor: ['#28a745', '#dc3545', '#ffc107']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'bottom' }
            }
        }
    });
});
</script>

<style>
.card {
    transition: transform 0.2s, box-shadow 0.2s;
    border-radius: 0.75rem;
}
.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
}
</style>
{% endblock %}
