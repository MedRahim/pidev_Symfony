{% extends 'base.html.twig' %}

{% block title %}Edit Response{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Reclamation Details Card -->
                <div class="card mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 text-dark">
                            <i class="bi bi-file-earmark-text me-2"></i>Reclamation Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-person-circle fs-4 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0 text-muted">Client ID</h6>
                                        <p class="mb-0">{{ reponse.reclamation.clientId }}</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-tag fs-4 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0 text-muted">Type</h6>
                                        <p class="mb-0">{{ reponse.reclamation.type }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-calendar3 fs-4 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0 text-muted">Date</h6>
                                        <p class="mb-0">{{ reponse.reclamation.datee|date('Y-m-d') }}</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-check-circle fs-4 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0 text-muted">Status</h6>
                                        <span class="badge {{ reponse.reclamation.state ? 'bg-success' : 'bg-warning' }}">
                                            {{ reponse.reclamation.state ? 'Resolved' : 'Pending' }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <h6 class="text-muted mb-3">Description</h6>
                            <div class="p-3 bg-light rounded">
                                {{ reponse.reclamation.description }}
                            </div>
                            {% if reponse.reclamation.photo %}
                                <div class="mt-3">
                                    <h6 class="text-muted mb-3">Photo</h6>
                                    <div class="photo-preview-container">
                                        <img src="{{ asset('uploads/photos/' ~ reponse.reclamation.photo) }}" 
                                             alt="Reclamation Photo" 
                                             class="photo-thumbnail"
                                             onclick="showLargePhoto(this)">
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Response Form Card -->
                <div class="card">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 text-dark">
                            <i class="bi bi-pencil-square me-2"></i>Edit Response
                        </h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        <input type="hidden" name="redirect" value="{{ path('admin_reclamation_index', {'highlight': reponse.reclamation.id}) }}">
                        
                        <div class="mb-4">
                            <label for="{{ form.message.vars.id }}" class="form-label text-muted">Response Message</label>
                            {{ form_widget(form.message, {
                                'attr': {
                                    'class': 'form-control',
                                    'rows': 5,
                                    'placeholder': 'Type your response here...'
                                }
                            }) }}
                            <div class="invalid-feedback">
                                Please provide a response message.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('admin_reclamation_index', {'highlight': reponse.reclamation.id}) }}" 
                               class="btn btn-light">
                                <i class="bi bi-arrow-left me-2"></i>Back to Reclamations
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        .form-control {
            border: 1px solid #e3e6f0;
        }
        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
        .btn {
            padding: 0.5rem 1.25rem;
            font-weight: 500;
        }
        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }
        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2653d4;
        }
        .btn-light {
            background-color: #f8f9fc;
            border-color: #f8f9fc;
        }
        .btn-light:hover {
            background-color: #eaecf4;
            border-color: #eaecf4;
        }
        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
        }
        .photo-preview-container {
            position: relative;
            width: 50px;
            height: 50px;
        }
        
        .photo-thumbnail {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
            cursor: pointer;
        }
        
        .photo-preview-large {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80vw;
            max-width: 800px;
            height: 80vh;
            max-height: 600px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            display: none;
            overflow: hidden;
            z-index: 1050;
        }
        
        .photo-preview-large img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .photo-preview-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: none;
            z-index: 1040;
            cursor: pointer;
        }

        .photo-close-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: rgba(0, 0, 0, 0.5);
            border: none;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1051;
            padding: 0;
        }

        .photo-close-btn i {
            color: white;
            font-size: 10px;
        }

        .photo-close-btn:hover {
            background: rgba(0, 0, 0, 0.7);
        }
    </style>

    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        window.showLargePhoto = function(thumbnail) {
            const overlay = document.createElement('div');
            overlay.className = 'photo-preview-overlay';
            document.body.appendChild(overlay);

            const largePreview = document.createElement('div');
            largePreview.className = 'photo-preview-large';
            
            const closeButton = document.createElement('button');
            closeButton.className = 'photo-close-btn';
            closeButton.innerHTML = '<i class="bi bi-x-lg"></i>';
            closeButton.onclick = hideLargePhoto;
            
            const img = document.createElement('img');
            img.src = thumbnail.src;
            img.alt = 'Large Preview';
            
            largePreview.appendChild(closeButton);
            largePreview.appendChild(img);
            document.body.appendChild(largePreview);

            overlay.style.display = 'block';
            largePreview.style.display = 'block';

            overlay.onclick = hideLargePhoto;
        };
        
        window.hideLargePhoto = function() {
            const overlay = document.querySelector('.photo-preview-overlay');
            const largePreview = document.querySelector('.photo-preview-large');
            if (overlay && largePreview) {
                overlay.style.display = 'none';
                largePreview.style.display = 'none';
                setTimeout(() => {
                    document.body.removeChild(overlay);
                    document.body.removeChild(largePreview);
                }, 300);
            }
        };
    </script>
{% endblock %}
