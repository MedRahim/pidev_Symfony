{% extends 'base.html.twig' %}

{% block title %}Détails de la Réponse{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Détails de la Réponse</h1>
            <div class="btn-group">
                <a href="{{ path('app_reponse_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
                <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Modifier
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>{{ reponse.id }}</td>
                                </tr>
                                <tr>
                                    <th>Contenu</th>
                                    <td>{{ reponse.contenu }}</td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>{{ reponse.date ? reponse.date|date('d/m/Y H:i') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-white">
            <form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}" 
                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?');" 
                  class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                <button class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Supprimer
                </button>
            </form>
        </div>
    </div>
{% endblock %}
