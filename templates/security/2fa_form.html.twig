{% extends 'FrontOffice/base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h2>Enable Two-Factor Authentication</h2>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Step 1: Scan QR Code</h4>
                        <div class="mb-4">
                            <img src="{{ qrCode }}" alt="QR Code" class="img-fluid">
                        </div>

                        <h4>Step 2: Enter Verification Code</h4>
                        <form method="post" action="{{ path('app_confirm_2fa') }}">
                            <div class="form-group">
                                <label for="code">6-digit Code</label>
                                <input type="number"
                                       id="code"
                                       name="code"
                                       class="form-control"
                                       required
                                       autocomplete="one-time-code"
                                       inputmode="numeric"
                                       pattern="[0-9]{6}"
                                       placeholder="123456">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">
                                Verify and Enable 2FA
                            </button>
                        </form>
                    </div>

                    <div class="col-md-6">
                        <div class="alert alert-warning">
                            <h4><i class="bi bi-exclamation-triangle"></i> Important</h4>
                            <ul>
                                <li>Use Google Authenticator, Authy, or similar app</li>
                                <li>Scan the QR code or enter this secret manually:<br>
                                    <code>{{ secret }}</code>
                                </li>
                                <li>Store backup codes securely</li>
                                <li>Without access to your authenticator app, you'll be locked out</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}