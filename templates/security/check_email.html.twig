{# templates/security/check_email.html.twig #}
{% extends 'FrontOffice/base.html.twig' %}

{% block title %}Check Your Email{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-body p-4 text-center">
                        <h1 class="h3 mb-4">Check Your Email</h1>
                        <p class="lead">
                            We've sent a verification link to your email address.
                        </p>
                        <p>
                            <i class="bi bi-envelope-check fs-1 text-primary"></i>
                        </p>
                        <p class="text-muted">
                            Didn't receive the email? Check your spam folder or
                            <a href="{{ path('app_resend_verification') }}">resend verification email</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}