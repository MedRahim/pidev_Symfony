{% extends 'FrontOffice/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --cyber-blue: #00f0ff;
            --cyber-purple: #7b2dff;
            --dark-matrix: #0a0a12;
            --neon-glow: 0 0 10px var(--cyber-blue),
            0 0 20px rgba(0, 240, 255, 0.3);
            --font-mono: 'Courier New', monospace;
        }

        body {
            background:
                    radial-gradient(circle at 20% 30%, rgba(123, 45, 255, 0.15) 0%, transparent 40%),
                    radial-gradient(circle at 80% 70%, rgba(0, 240, 255, 0.15) 0%, transparent 40%),
                    linear-gradient(to bottom, #050510 0%, #0f0f1f 100%);
            color: white;
            font-family: var(--font-mono);
            min-height: 100vh;
            display: flex;
            align-items: center;
            overflow-x: hidden;
        }

        .cyber-container {
            max-width: 500px;
            width: 100%;
            margin: 0 auto;
            padding: 2rem;
            position: relative;
        }

        .cyber-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, var(--cyber-blue), var(--cyber-purple));
            z-index: -1;
            border-radius: 16px;
            animation: borderPulse 4s infinite alternate;
        }

        @keyframes borderPulse {
            0% { opacity: 0.3; }
            100% { opacity: 0.7; }
        }

        .cyber-card {
            background: rgba(15, 15, 30, 0.85);
            backdrop-filter: blur(10px);
            border-radius: 14px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .cyber-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--cyber-blue), var(--cyber-purple));
        }

        .cyber-header {
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
        }

        .cyber-icon {
            font-size: 3.5rem;
            color: var(--cyber-blue);
            margin-bottom: 1rem;
            text-shadow: var(--neon-glow);
            animation: iconFloat 3s ease-in-out infinite;
        }

        @keyframes iconFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .cyber-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(to right, var(--cyber-blue), var(--cyber-purple));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            letter-spacing: 1px;
        }

        .cyber-subtitle {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .cyber-email {
            color: var(--cyber-blue);
            font-weight: bold;
            word-break: break-all;
            display: inline-block;
            margin: 0.5rem 0;
        }

        .cyber-form {
            margin-top: 2rem;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-label {
            display: block;
            margin-bottom: 0.5rem;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        .cyber-input {
            width: 100%;
            padding: 15px 20px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: white;
            font-family: var(--font-mono);
            font-size: 1.2rem;
            letter-spacing: 5px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .cyber-input:focus {
            outline: none;
            border-color: var(--cyber-blue);
            box-shadow: var(--neon-glow);
        }

        .cyber-input::placeholder {
            letter-spacing: normal;
            color: rgba(255, 255, 255, 0.3);
        }

        .cyber-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, var(--cyber-blue), var(--cyber-purple));
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            font-family: var(--font-mono);
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            position: relative;
            overflow: hidden;
            margin-top: 1rem;
        }

        .cyber-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 240, 255, 0.4);
        }

        .cyber-btn::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                    to bottom right,
                    rgba(255, 255, 255, 0) 45%,
                    rgba(255, 255, 255, 0.3) 50%,
                    rgba(255, 255, 255, 0) 55%
            );
            transform: rotate(30deg);
            animation: shine 3s infinite;
        }

        @keyframes shine {
            0% { transform: translateX(-100%) rotate(30deg); }
            100% { transform: translateX(100%) rotate(30deg); }
        }

        .alert-danger {
            background: rgba(255, 50, 50, 0.15);
            border-left: 3px solid #ff3232;
            color: #ff6b6b;
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            position: relative;
        }

        .alert-danger::before {
            content: 'âš ';
            margin-right: 0.5rem;
        }

        .resend-link {
            display: block;
            text-align: center;
            margin-top: 1.5rem;
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            transition: color 0.3s;
            font-size: 0.9rem;
        }

        .resend-link:hover {
            color: var(--cyber-blue);
            text-decoration: underline;
        }

        .digit-boxes {
            display: flex;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .digit-box {
            width: 50px;
            height: 60px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            color: white;
            transition: all 0.3s ease;
            position: relative;
        }

        .digit-box.active {
            border-color: var(--cyber-blue);
            box-shadow: var(--neon-glow);
        }

        .hidden-input {
            position: absolute;
            opacity: 0;
            height: 0;
            width: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="cyber-container mb-100 ml-200 mt-200 mb-200">
        <div class="cyber-card">
            <div class="cyber-header">
                <div class="cyber-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h1 class="cyber-title">IDENTITY VERIFICATION</h1>
                <p class="cyber-subtitle">
                    Enter the 6-digit security code generated by your authenticator app
                </p>
                <div class="cyber-email">{{ email }}</div>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" class="cyber-form">
                <!-- Alternative Digit Boxes Display -->
                <div class="digit-boxes" id="digitBoxes">
                    {% for i in 1..6 %}
                        <div class="digit-box" data-index="{{ loop.index0 }}"></div>
                    {% endfor %}
                </div>

                <!-- Hidden Input for Actual Form Submission -->
                <input
                        type="text"
                        id="code"
                        name="code"
                        class="hidden-input"
                        required
                        maxlength="6"
                        pattern="\d{6}"
                        inputmode="numeric"
                />

                <button type="submit" class="genric-btn info-border">
                    <i class="fas fa-fingerprint me-2"></i> VERIFY IDENTITY
                </button>


            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const digitBoxes = document.querySelectorAll('.digit-box');
            const codeInput = document.getElementById('code');

            // Focus the hidden input when clicking any digit box
            digitBoxes.forEach(box => {
                box.addEventListener('click', () => {
                    codeInput.focus();
                });
            });

            // Handle input and update visual boxes
            codeInput.addEventListener('input', function(e) {
                const value = this.value.replace(/\D/g, '').substring(0, 6);
                this.value = value;

                // Update visual boxes
                digitBoxes.forEach((box, index) => {
                    box.textContent = value[index] || '';
                    box.classList.toggle('active', index === value.length);
                });

                // Auto-submit if 6 digits entered
                if (value.length === 6) {
                    this.form.submit();
                }
            });

            // Handle backspace
            codeInput.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && this.value.length > 0) {
                    // Allow default backspace behavior
                    setTimeout(() => {
                        digitBoxes.forEach(box => box.classList.remove('active'));
                        if (this.value.length < 6) {
                            digitBoxes[this.value.length].classList.add('active');
                        }
                    }, 0);
                }
            });

            // Initial focus
            codeInput.focus();
        });
    </script>
{% endblock %}