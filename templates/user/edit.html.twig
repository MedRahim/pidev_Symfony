{% extends 'FrontOffice/base.html.twig' %}

{% block title %}Edit {{ user.Name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6e8efb, #a777e3);
            --danger-gradient: linear-gradient(135deg, #f54b64, #f78361);
            --glass-bg: rgba(255, 255, 255, 0.08);
            --glass-border: rgba(255, 255, 255, 0.15);
            --neon-accent: #00f2fe;
            --text-primary: #f8f9fa;
        }

        body {
            background: #121212;
            color: var(--text-primary);
        }

        .security-alert {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        .profile-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .profile-card:hover {
            transform: translateY(-5px);
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--glass-border);
            color: white;
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: var(--neon-accent);
            box-shadow: 0 0 0 0.25rem rgba(0, 242, 254, 0.25);
            color: white;
        }

        .form-label {
            color: rgba(255, 255, 255, 0.8);
            font-weight: 500;
            margin-bottom: 8px;
        }

        .img-thumbnail {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            padding: 0.25rem;
        }

        .btn-update {
            background: var(--primary-gradient);
            border: none;
            color: white;
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 10px 25px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(110, 142, 251, 0.4);
        }

        .modal-content {
            background: #1e1e1e;
            border: 1px solid var(--glass-border);
        }

        .modal-header {
            border-bottom: 1px solid var(--glass-border);
        }

        .modal-footer {
            border-top: 1px solid var(--glass-border);
        }

        .btn-delete {
            background: var(--danger-gradient);
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <!-- Security Settings Section -->
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8">
                <div class="security-alert p-4">
                    <h2 class="h4 mb-3">Security Settings</h2>

                    {% if user %}
                        {% if not user.isGoogleAuthenticatorEnabled %}
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0">Two-factor authentication is currently <strong class="text-warning">disabled</strong>.</p>
                                    <small class="text-muted">Add an extra layer of security to your account</small>
                                </div>
                                <a href="{{ path('app_enable_2fa') }}" class="btn btn-primary">
                                    <i class="bi bi-shield-lock me-1"></i> Enable 2FA
                                </a>
                            </div>
                        {% else %}
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0">Two-factor authentication is <strong class="text-success">enabled</strong>.</p>
                                    <small class="text-muted">Your account has enhanced security protection</small>
                                </div>
                                <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i> Active
                            </span>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            You must be logged in to view this page.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Profile Edit Section -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 fw-bold">Edit Profile: {{ user.Name }}</h1>
                </div>

                <div class="profile-card p-4 mb-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row g-4">
                        <!-- Left Column -->
                        <div class="col-md-6">

                            {% if user.googleId %}
                                <div class="text-center mb-4">
                                    <img src="{{ user.avatar }}" class="img-thumbnail" style="max-height: 200px; max-width: 200px;" alt="Current profile picture">
                                    <div class="form-text mt-2">Current Profile Picture</div>
                                </div>
                                {% else %}
                                    <div class="text-center mb-4">
                                        <img src="{{ asset(user.pathtopic) }}" class="img-thumbnail" style="max-height: 200px; max-width: 200px;" alt="Current profile picture">
                                        <div class="form-text mt-2">Current Profile Picture</div>
                                    </div>
                            {% endif %}

                            {{ form_row(form.profilePicture, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.CIN, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.Name, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.Email, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.Password, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'},
                                'help': 'Leave blank to keep current password'
                            }) }}
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            {{ form_row(form.Phone, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.Address, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.birthday, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}

                            {{ form_row(form.bio, {
                                'attr': {'class': 'form-control', 'rows': 4},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-5">
                        <button type="submit" class="btn btn-update">
                            <i class="bi bi-check-circle me-2"></i> Update Profile
                        </button>

                        <button type="button" class="genric-btn danger-border" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i> Delete Account
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title fw-bold" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
                    </div>
                    <p class="fw-bold text-center">Are you sure you want to permanently delete your account?</p>
                    <p class="text-muted text-center">This action cannot be undone and will erase all your data.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}