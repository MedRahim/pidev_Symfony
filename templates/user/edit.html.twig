{% extends 'BackOffice/partials/base.html.twig' %}

{% block title %}Edit {{ user.Name }}{% endblock %}

{% block body %}
    <div class="container-fluid p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h4 mb-0 fw-bold">Edit User: {{ user.Name }}</h1>
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Back to list
            </a>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="row g-3">
                    {# Left Column #}
                    <div class="col-md-6">
                        {% if user.pathtopic %}
                            <div class="text-center mb-3">
                                <img src="{{ asset(user.pathtopic) }}" class="img-thumbnail" style="max-height: 200px;" alt="Current profile picture">
                                <div class="form-text">Current Profile Picture</div>
                            </div>
                        {% endif %}

                        {{ form_row(form.profilePicture, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.CIN, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.Name, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.Email, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.Password, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'},
                            'help': 'Leave blank to keep current password'
                        }) }}
                    </div>

                    {# Right Column #}
                    <div class="col-md-6">
                        {{ form_row(form.Phone, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.Address, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.birthday, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}

                        {{ form_row(form.bio, {
                            'attr': {'class': 'form-control', 'rows': 4},
                            'label_attr': {'class': 'fw-bold'}
                        }) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary fw-bold">
                        <i class="bi bi-check-circle me-1"></i> Update User
                    </button>

                    <button type="button" class="btn btn-outline-danger fw-bold" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash-fill me-1"></i> Delete User
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title fw-bold" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="fw-bold">Are you sure you want to permanently delete {{ user.Name }}?</p>
                        <p class="text-muted">This action cannot be undone and will erase all user data.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}