{% extends 'FrontOffice/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h1 class="h3 mb-4 text-center">Login</h1>

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.email, {
                                'attr': {'class': 'form-control'}
                            }) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.password, {
                                'attr': {'class': 'form-control'}
                            }) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="mb-2 mt-4 ml-4">
                            <div class="d-grid gap-2 col-md-6 mx-auto">
                                <button type="submit" class="genric-btn primary-border">LOGIN</button>
                            </div>
                        </div>
                        {{ form_end(form) }}

                        <!-- Divider with "OR" -->
                        <div class="divider d-flex align-items-center justify-content-center my-2">
                            <hr class="w-25">
                            <span class="px-3 text-muted">OR</span>
                            <hr class="w-25">
                        </div>

                        <!-- Centered alternative options -->
                        <div class="text-center">
                            <div class="mb-3">
                                <a href="{{ path('connect_google_start') }}" class="genric-btn success">
                                    <i class="fab fa-google"></i> Login with Google
                                </a>
                            </div>
                            <div>
                                <a href="{{ path('app_user_new') }}" class="genric-btn link">
                                    Don't have an account? Signup.
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}