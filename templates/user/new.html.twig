{% extends 'FrontOffice/base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h1 class="h3 mb-4 text-center">Create new User</h1>

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="mb-3">
<label for="{{ form.profilePicture.vars.id }}" class="form-label fw-bold">Profile Picture</label>
{{ form_widget(form.profilePicture, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.profilePicture) }}

    <div class="form-text">JPEG, PNG or GIF (Max 2MB)</div>
</div>

<div class="mb-3">
<label for="{{ form.CIN.vars.id }}" class="form-label fw-bold">CIN/National ID</label>
{{ form_widget(form.CIN, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.CIN) }}

</div>

<div class="mb-3">
<label for="{{ form.Name.vars.id }}" class="form-label fw-bold">Full Name</label>
{{ form_widget(form.Name, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.Name) }}

</div>

<div class="mb-3">
<label for="{{ form.Email.vars.id }}" class="form-label fw-bold">Email</label>
{{ form_widget(form.Email, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.Email) }}

</div>

<div class="mb-3">
<label for="{{ form.Password.vars.id }}" class="form-label fw-bold">Password</label>
{{ form_widget(form.Password, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.Password) }}

</div>

<div class="mb-3">
<label for="{{ form.Phone.vars.id }}" class="form-label fw-bold">Phone</label>
{{ form_widget(form.Phone, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.Phone) }}
</div>

<div class="mb-3">
<label for="{{ form.Address.vars.id }}" class="form-label fw-bold">Address</label>
{{ form_widget(form.Address, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.Address) }}

</div>

<div class="mb-3">
<label for="{{ form.birthday.vars.id }}" class="form-label fw-bold">Date of Birth</label>
{{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.birthday) }}

</div>

<div class="mb-3">
<label for="{{ form.bio.vars.id }}" class="form-label fw-bold">Biography</label>
{{ form_widget(form.bio, {'attr': {'class': 'form-control', 'rows': 4}}) }}
    {{ form_errors(form.bio) }}

</div>

                    <div class="d-grid gap-2 mt-4 mx-auto" style="max-width: 200px;">
                        <button type="submit" class="btn btn-outline-secondary">SAVE</button>
                    </div>
{{ form_end(form) }}

{#<div class="text-center mt-4">#}
{#<a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Back to list</a>#}
{#</div>#}
</div>
</div>
</div>
</div>
</div>
{% endblock %}